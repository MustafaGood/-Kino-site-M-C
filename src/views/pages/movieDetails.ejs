<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <% if (movie.posterUrl) { %>
        <img src="<%= movie.posterUrl %>" class="img-fluid rounded mb-3" alt="<%= movie.title %>">
      <% } %>
    </div>
    <div class="col-md-8">
      <h1><%= movie.title %></h1>
      <p><strong>Genre:</strong> <%= movie.genre.join(', ') %></p>
      <p><strong>Regissör:</strong> <%= movie.director %></p>
      <p><strong>Skådespelare:</strong> <%= movie.actors.join(', ') %></p>
      <p><strong>Längd:</strong> <%= movie.duration %> min</p>
      <p><strong>Utgivningsdatum:</strong> <%= movie.releaseDate ? movie.releaseDate.toISOString().slice(0,10) : 'Okänt' %></p>
      <p><strong>Betyg:</strong> <%= movie.rating %></p>
      <p class="mt-3"><%= movie.description %></p>
      <a href="/movies" class="btn btn-secondary mt-2">Tillbaka till filmer</a>
    </div>
  </div>
</div>
